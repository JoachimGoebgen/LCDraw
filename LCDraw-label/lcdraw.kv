#:kivy 1.0

<MainBox>:
    PaintWidget:
        id: paintWidget
        lineWidth: round(lineWidthSlider.value, 1)

    DataBox:
        id: dataBox
        orientation: "vertical"
        cols: 2
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: labelLabel
            text: dataBox.labels[dataBox.labelIndex]
            font_size: 50
        BoxLayout:
            id: lineWidthBox
            orientation: "horizontal"
            pos_hint: 
            Slider:
                id: lineWidthSlider
                size_hint: (0.8, None)
                min: 1
                value: 5
                max: 10     
            Label:
                id: lineWidthLabel
                size_hint: (0.2, None)
                text: str(round(lineWidthSlider.value, 1))
