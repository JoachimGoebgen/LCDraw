#:kivy 1.0

<MainBox>:
    PaintWidget:
        id: paintWidget
        size_hint: (self.paintWidgetSize_ratio, 1)
        lineWidth: round(self.drawLineWidth_px, 1)

    DataBox:
        id: dataBox
        size_hint: (self.dataBoxSize_ratio, 1)
        orientation: "vertical"
        cols: 2
        canvas.before:
            Color:
                rgba: 0.1, 0.1, 0.1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            id: redoButton
            text: "undo"
            font_size: 50
            on_release: root.rollback_image()
        Button:
            id: writeButton
            text: "write data"
            font_size: 30
            on_release: root.write_data()
        Label:
            id: labelLabel
            text: root.labels[0]
            font_size: 50
